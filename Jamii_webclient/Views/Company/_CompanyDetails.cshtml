                <span class="input-group-addon"><i class="fa fa-map-marker fa-fw" aria-hidden="true"></i></span>
                @Html.TextBoxFor(model => model.PhysicalAddress, new { @class = "form-control input-md", placeholder = "Physical Adress" })
                @Html.ValidationMessageFor(model => model.PhysicalAddress)
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="form-group">
            @Html.LabelFor(model => model.MobilePhoneNumber, new { @class = "control-label" })
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-mobile-phone fa-fw"></i></span>
                @Html.TextBoxFor(model => model.MobilePhoneNumber, new { @class = "form-control input-md", placeholder = "Mobile Phone" })
                @Html.ValidationMessageFor(model => model.MobilePhoneNumber)
            </div>
        </div>
    </div>
</div>

